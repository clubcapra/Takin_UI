{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.css",
    "src/**/*.scss",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/*.vue"
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "composite": true,
    "resolvePackageJsonExports": false,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vuetify",
      "vitest/globals"
    ]
  }
}
